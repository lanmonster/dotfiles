" auto reload vimrc
au BufWritePost .vimrc so ~/.vimrc

" Tabs to spaces
set expandtab
set smarttab
set shiftwidth=4
set tabstop=4

set relativenumber
set number

" Disable arrow keys
no <up> <Nop>
no <down> <Nop>
no <left> <Nop>
no <right> <Nop>
ino <up> <Nop>
ino <down> <Nop>
ino <left> <Nop>
ino <right> <Nop>
vno <up> <Nop>
vno <down> <Nop>
vno <left> <Nop>
vno <right> <Nop>

" 
